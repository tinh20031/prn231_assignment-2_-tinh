@page
@model BookStoreClient.Pages.Authors.CreateModel
@{
    ViewData["Title"] = "Thêm tác giả";
}

<h2>Thêm tác giả</h2>

<form method="post">
    <div class="form-group">
        <label>Họ</label>
        <input type="text" asp-for="Author.LastName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Tên</label>
        <input type="text" asp-for="Author.FirstName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Author.EmailAddress" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-page="Index" class="btn btn-secondary">Hủy</a>
</form>
